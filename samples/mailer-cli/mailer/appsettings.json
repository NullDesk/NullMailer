{
  "Logging": {
    "IncludeScopes": true,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "MailSettings": {
    "ActiveMailService": "MailKit",
    "MkSmtpMailerSettings": {
      "FromEmailAddress": "test@test.com",
      "FromDisplayName": "Sample Mailer CLI - MailKit",
      "SmtpServer": "localhost",
      "SmtpPort": 25,
      "SmtpUseSsl": false
    },
    "SendGridMailerSettings": {
      "ApiKey": "your-api-key-here",
      "FromEmailAddress": "test@test.com",
      "FromDisplayName": "Sample Mailer CLI - SendGrid",
      "IsSandboxMode": true
    },
    "FileTemplateMailerSettings": {
      "TemplatePath": "./App_Data/Templates",
      "HtmlTemplateFileExtensions": ["html"],
      "TextTemplateFileExtension": ["txt"]
    }
  },
  "TestMessageSettings": {
    "SimpleMessageSettings": {
      "ToAddress": "noone@nowhere.com",
      "ToDisplayName": "Mr. Nobody",
      "Subject": "Test Mail",
      "HtmlBody": "<!doctype html><html lang=\"en\"><head><meta charset=\"utf-8\"><title>Test Message</title></head><body><p>Hello,</p><p>This is a test html message from the <a href=\"https://nowhere.com\">NullDesk Mailer-CLI Sample</a> application.</p><p>Thanks,</p><p>Bot</p></body></html>",
      "TextBody": "Hellp,\n\nThis is a test plain text message from the NullDesk Mailer-CLI Sample application.\n\nThanks,\n\nbot",
      "AttachmentFiles": [".\\App_Data\\Attachments\\test.txt"]
    },
    "SendGridTemplateMessage": {
      "Template": "a1dab65f-f2c1-4fb6-b9a6-002bcdb4b1c7",
      "ToAddress": "noone@nowhere.com",
      "ToDisplayName": "Mr. Nobody",
      "Subject": null,
      "ReplacementVariables": {
        "%name%": "Mr Nobody"
      },
      "AttachmentFiles": [".\\App_Data\\Attachments\\test.txt"]
    },
    "MailKitTemplateMessage": {
      "Template": "template1",
      "ToAddress": "noone@nowhere.com",
      "ToDisplayName": "Mr. Nobody",
      "Subject": "Test Mail",
      "ReplacementVariables": {
        "%name%": "Mr Nobody"
      },
      "AttachmentFiles": [".\\App_Data\\Attachments\\test.txt"]
    }
  }
}